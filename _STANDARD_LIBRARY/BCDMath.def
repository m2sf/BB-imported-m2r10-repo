DEFINITION MODULE BCDMath;

(* Mathematical Constants and Functions for Type BCD *)

CONST
    e = 2.7182818284590452353602874713526;
    pi = 3.1415926535897932384626433832795;
    phi = 1.6180339887498948482045868343656;

PROCEDURE sgn ( b : BCD ) : BCD;
(* Returns the signum value of b. *)

PROCEDURE floor ( b : BCD ) : BCD;
(* Returns the floor value of b. *)

PROCEDURE ceil ( b : BCD ) : BCD;
(* Returns the ceiling value of b. *)

PROCEDURE frac ( b : BCD ) : BCD;
(* Returns the fractional part of b. *)

PROCEDURE inv ( b : BCD ) : BCD;
(* Returns the multiplicative inverse 1/b of b. *)

PROCEDURE trunc ( b : BCD; n : CARDINAL ) : BCD;
(* Returns the value of b truncated to n decimal places. *)

PROCEDURE round ( b : BCD; n : CARDINAL ) : BCD;
(* Returns the value of b rounded to n decimal places. *)

PROCEDURE power ( base, exponent : BCD ) : BCD;
(* Returns the value of base raised to the power of exponent. *)

PROCEDURE sqrt ( b : BCD ) : BCD;
(* Returns the square root of b. *)

PROCEDURE ln ( b : BCD ) : BCD;
(* Returns the natural logarithm of b. *)

PROCEDURE log ( b : BCD ) : BCD;
(* Returns the decimal logarithm of b. *)

PROCEDURE sin ( b : BCD ) : BCD;
(* Returns the sine of b. *)

PROCEDURE cos ( b : BCD ) : BCD;
(* Returns the cosine of b. *)

PROCEDURE tan ( b : BCD ) : BCD;
(* Returns the tangent of b. *)

PROCEDURE arcsin ( b : BCD ) : BCD;
(* Returns the arcsine of b. *)

PROCEDURE arccos ( b : BCD ) : BCD;
(* Returns the arccosine of b. *)

PROCEDURE arctan ( b : BCD ) : BCD;
(* Returns the arctangent of b. *)

END BCDMath.