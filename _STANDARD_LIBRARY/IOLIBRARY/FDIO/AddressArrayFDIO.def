DEFINITION MODULE AddressArrayFDIO [ProtoArrayIO] FOR ADDRESS;

(* File-Descriptor IO Extension Library for Array Types of ADDRESS *)

IMPORT FileDescIO;

PROCEDURE [READ] ReadArray
  ( infile : FileDescIO.File; VAR array : BARE ARRAY OF ADDRESS );

PROCEDURE [WRITE] WriteArray
  ( outfile : FileDescIO.File; CONST array : BARE ARRAY OF ADDRESS );

PROCEDURE [WRITEF] WriteFArray
  ( outfile : FileDescIO.File;
    CONST fmtStr : ARRAY OF CHAR;
    CONST arrays : ARGLIST >0 OF BARE ARRAY OF ADDRESS );

END AddressArrayFDIO.