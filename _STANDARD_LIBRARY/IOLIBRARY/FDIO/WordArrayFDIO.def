DEFINITION MODULE WordArrayFDIO [ProtoArrayIO] FOR WORD;

(* File-Descriptor IO Extension Library for Array Types of WORD *)

IMPORT UNSAFE, FileDescIO;

PROCEDURE [READ] ReadArray
  ( infile : FileDescIO.File; VAR array : BARE ARRAY OF UNSAFE.WORD );

PROCEDURE [WRITE] WriteArray
  ( outfile : FileDescIO.File; CONST array : BARE ARRAY OF UNSAFE.WORD );

PROCEDURE [WRITEF] WriteFArray
  ( outfile : FileDescIO.File;
    CONST fmtStr : ARRAY OF CHAR;
    CONST arrays : ARGLIST >0 OF BARE ARRAY OF UNSAFE.WORD );

END WordArrayFDIO.