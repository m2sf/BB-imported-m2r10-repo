DEFINITION MODULE RealArrayFDIO [ProtoArrayIO] FOR REAL;

(* File-Descriptor IO Extension Library for Array Types of REAL *)

IMPORT FileDescIO;

PROCEDURE [READ] ReadArray
  ( infile : FileDescIO.File; VAR array : BARE ARRAY OF REAL );

PROCEDURE [WRITE] WriteArray
  ( outfile : FileDescIO.File; CONST array : BARE ARRAY OF REAL );

PROCEDURE [WRITEF] WriteFArray
  ( outfile : FileDescIO.File;
    CONST fmtStr : ARRAY OF CHAR;
    CONST arrays : ARGLIST >0 OF BARE ARRAY OF REAL );

END RealArrayFDIO.