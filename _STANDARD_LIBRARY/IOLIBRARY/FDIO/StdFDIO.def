DEFINITION MODULE StdFDIO;

(* File-Descriptor Based Standard IO Special File Access *)

IMPORT FileDescIO;

PROCEDURE [STDIN] in : FileDescIO.File;
(* Returns the file handle for stdin, bound to macro STDIN *)

PROCEDURE [STDOUT] out : FileDescIO.File;
(* Returns the file handle for stdout, bound to macro STDOUT *)

PROCEDURE [STDERR] err : FileDescIO.File;
(* Returns the file handle for stderr, bound to macro STDERR *)

END StdFDIO.