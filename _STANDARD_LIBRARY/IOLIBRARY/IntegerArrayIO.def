DEFINITION MODULE IntegerArrayIO [ProtoArrayIO] FOR INTEGER;

(* IO Extension Library for Array Types of INTEGER *)

IMPORT FileIO;

PROCEDURE [READ] ReadArray
  ( infile : FileIO.File; VAR array : BARE ARRAY OF INTEGER );

PROCEDURE [WRITE] WriteArray
  ( outfile : FileIO.File; CONST array : BARE ARRAY OF INTEGER );

PROCEDURE [WRITEF] WriteFArray
  ( outfile : FileIO.File;
    CONST fmtStr : ARRAY OF CHAR;
    CONST arrays : ARGLIST >0 OF BARE ARRAY OF INTEGER );

END IntegerArrayIO.