DEFINITION MODULE CharStrIO [ProtoStrIO] FOR CHAR;

(* IO Extension Library for String Types of CHAR *)

IMPORT FileIO;

PROCEDURE [READ] ReadStr
  ( infile : FileIO.File; VAR str : ARRAY OF CHAR );

PROCEDURE [WRITE] WriteStr
  ( outfile : FileIO.File; CONST str : ARRAY OF CHAR );

PROCEDURE [WRITEF] WriteFStr
  ( outfile : FileIO.File;
    CONST fmtStr : ARRAY OF CHAR;
    CONST strings : ARGLIST >0 OF ARRAY OF CHAR );

END CharStrIO.