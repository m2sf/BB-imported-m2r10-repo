DEFINITION MODULE StdFIO;

(* File-Pointer Standard IO Special File Access *)

IMPORT FilePtrIO;

PROCEDURE [STDIN] in : FilePtrIO.File;
(* Returns the file handle for stdin, bound to macro STDIN *)

PROCEDURE [STDOUT] out : FilePtrIO.File;
(* Returns the file handle for stdout, bound to macro STDOUT *)

PROCEDURE [STDERR] err : FilePtrIO.File;
(* Returns the file handle for stderr, bound to macro STDERR *)

END StdFIO.