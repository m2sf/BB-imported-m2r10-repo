DEFINITION MODULE BooleanArrayFIO [ProtoArrayIO] FOR BOOLEAN;

(* File-Pointer IO Extension Library for Array Types of BOOLEAN *)

IMPORT FilePtrIO;

PROCEDURE [READ] ReadArray
  ( infile : FilePtrIO.File; VAR array : BARE ARRAY OF BOOLEAN );

PROCEDURE [WRITE] WriteArray
  ( outfile : FilePtrIO.File; CONST array : BARE ARRAY OF BOOLEAN );

PROCEDURE [WRITEF] WriteFArray
  ( outfile : FilePtrIO.File;
    CONST fmtStr : ARRAY OF CHAR;
    CONST arrays : ARGLIST >0 OF BARE ARRAY OF BOOLEAN );

END BooleanArrayFIO.