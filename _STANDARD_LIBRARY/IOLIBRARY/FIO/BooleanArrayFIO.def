DEFINITION MODULE BooleanArrayFIO [ProtoArrayIO] FOR BOOLEAN;

(* File-Only IO Extension Library for Array Types of BOOLEAN *)

IMPORT FileIO;

PROCEDURE [READ] ReadArray
  ( infile : FileIO.File; VAR array : BARE ARRAY OF BOOLEAN );

PROCEDURE [WRITE] WriteArray
  ( outfile : FileIO.File; CONST array : BARE ARRAY OF BOOLEAN );

PROCEDURE [WRITEF] WriteFArray
  ( outfile : FileIO.File;
    CONST fmtStr : ARRAY OF CHAR;
    CONST arrays : ARGLIST >0 OF BARE ARRAY OF BOOLEAN );

END BooleanArrayFIO.