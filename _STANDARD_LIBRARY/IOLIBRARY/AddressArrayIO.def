DEFINITION MODULE AddressArrayIO [ProtoArrayIO] FOR ADDRESS;

(* IO Extension Library for Array Types of ADDRESS *)

IMPORT FileIO;

PROCEDURE [READ] ReadArray
  ( infile : FileIO.File; VAR array : BARE ARRAY OF ADDRESS );

PROCEDURE [WRITE] WriteArray
  ( outfile : FileIO.File; CONST array : BARE ARRAY OF ADDRESS );

PROCEDURE [WRITEF] WriteFArray
  ( outfile : FileIO.File;
    CONST fmtStr : ARRAY OF CHAR;
    CONST arrays : ARGLIST >0 OF BARE ARRAY OF ADDRESS );

END AddressArrayIO.
