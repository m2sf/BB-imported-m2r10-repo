DEFINITION MODULE ByteArrayIO [ProtoArrayIO] FOR BYTE;

(* Common IO Extension Library for Array Types of BYTE *)

IMPORT UNSAFE, ChanIO;

PROCEDURE [READ] ReadArray
  ( infile : ChanIO.Channel; VAR a : BARE ARRAY OF UNSAFE.BYTE );

PROCEDURE [WRITE] WriteArray
  ( outfile : ChanIO.Channel; CONST a : BARE ARRAY OF UNSAFE.BYTE );

PROCEDURE [WRITEF] WriteFArray
  ( outfile : ChanIO.Channel;
    CONST fmtStr : ARRAY OF CHAR;
    CONST items : ARGLIST >0 OF BARE ARRAY OF UNSAFE.BYTE );

END ByteArrayIO.