BLUEPRINT ProtoCardMath [ProtoExtension] FOR ProtoCardinal;

(* Blueprint for math extension libraries of cardinal types *)

MODULE TYPE = NIL;

(* Required Mathematical Functions *)

PROCEDURE sgn ( n : ProtoCardinal ) : ProtoCardinal;
(* Required function to return the signum value of n. *)

PROCEDURE exp2 ( n : ProtoCardinal ) : ProtoCardinal;
(* Required function to return the value of n raised to the power of two. *)

PROCEDURE power ( n, exponent : ProtoCardinal ) : ProtoCardinal;
(* Required function to return the value of n raised to the power of
   a given exponent. *)

PROCEDURE nearestSmallerPowerOf2 ( n : ProtoCardinal ) : ProtoCardinal;
(* Required function to return the nearest power of 2 smaller than n. *)

PROCEDURE nearestLargerPowerOf2 ( n : ProtoCardinal ) : ProtoCardinal;
(* Required function to return the nearest power of 2 larger than n. *)

END ProtoCardMath.