DEFINITION MODULE ByteBareArrayIO [ProtoBareArrayIO] FOR UNSAFE.BYTE;

(* Common IO Extension Library for bare and flex arrays of BYTE *)

IMPORT UNSAFE, FileIO;

PROCEDURE [READ] ReadBareArray
  ( infile : FileIO.File; VAR a : BARE ARRAY OF UNSAFE.BYTE );

PROCEDURE [WRITE] WriteBareArray
  ( outfile : FileIO.File; CONST a : BARE ARRAY OF UNSAFE.BYTE );

PROCEDURE [WRITEF] WriteFBareArray
  ( outfile : FileIO.File;
    CONST fmtStr : ARRAY OF CHAR;
    CONST items : ARGLIST >0 OF BARE ARRAY OF UNSAFE.BYTE );

END ByteBareArrayIO.
