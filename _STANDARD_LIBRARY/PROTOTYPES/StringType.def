BINDINGS FOR StringType;

(* Semantic Properties for Dynamic String Types *)


(* ADTs must be opaque pointers,
   character and string literals may be used *)

TYPE = OPAQUE := CHAR;


(* Bindings required for StringType ADTs *)

PROCEDURE [NEW]; (* require binding to NEW procedure *)

PROCEDURE [DISPOSE]; (* require binding to DISPOSE procedure *)

PROCEDURE [:=]; (* require binding to assignment operator *)

PROCEDURE [::]; (* optional bindings to conversion operator *)

PROCEDURE [?]; (* require accessor binding to [ ] operator *)

PROCEDURE [!]; (* require mutator binding to [ ] operator *)

PROCEDURE [LENGTH]; (* require binding to LENGTH function *)

PROCEDURE [+]; (* require binding to concatenation operator *)

PROCEDURE [=]; (* require binding to equal operator *)

PROCEDURE [<]; (* require binding to less operator *)

PROCEDURE [>]; (* require binding to greater operator *)

END StringType.