BINDINGS FOR RTYPE; (* R-Type *)

(* Semantic Properties for Real Number Types *)


(* ADTs must be opaque records,
   real number literals may be used *)

TYPE = OPAQUE RECORD := REAL;


(* Bindings required for R-Type ADTs *)

CONST [TMIN]; (* require binding to TMIN function *)

CONST [TMAX]; (* require binding to TMAX function *)

PROCEDURE [:=]; (* require binding to assignment operator *)

PROCEDURE [::]; (* optional bindings to conversion operator *)

PROCEDURE [ABS]; (* require binding to ABS function *)

PROCEDURE [NEG]; (* require binding to NEG function *)

PROCEDURE [+]; (* require binding to plus operator *)

PROCEDURE [-]; (* require binding to minus operator *)

PROCEDURE [*]; (* require binding to multiply operator *)

PROCEDURE [/]; (* require binding to division operator *)

PROCEDURE [=]; (* require binding to equal operator *)

PROCEDURE [<]; (* require binding to less operator *)

PROCEDURE [>]; (* require binding to greater operator *)

PROCEDURE [SXF]; (* require binding to scalar conversion primitive SXF *)

PROCEDURE [VAL]; (* require binding to scalar conversion primitive VAL *)

END RTYPE.