DEFINITION MODULE ScalarDigitCount;

(* Digit Count Constants and Types for Use by Numeric ADTs *)


CONST
    maxSignificandDigits = 999;
    (* maximum number of significand digits in scalar exchange format *)
    
    maxExponentDigits = 15;
    (* maximum number of exponent digits in scalar exchange format *)


TYPE
    SignificandDigitCount = [0 .. maxSignificandDigits] OF CARDINAL;
    (* unsigned type to hold SXF significand digit count *)
    
    ExponentDigitCount = [0 .. maxExponentDigits] OF OCTET;
    (* unsigned type to hold SXF exponent digit count *)


(* ScalarDigitCount Type *)

    ScalarDigitCount = RECORD
        significand  : SignificandDigitCount;
        exponent     : ExponentDigitCount
    END; (* ScalarDigitCount *)

END ScalarDigitCount.