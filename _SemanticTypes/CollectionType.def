BINDINGS FOR CollectionType;

(* Semantic Properties for Collection Types *)


(* ADTs must be opaque records with associative semantics,
   no literals may be assigned *)

TYPE = OPAQUE ASSOCIATIVE ARRAY;


(* Bindings required for CollectionType ADTs *)

PROCEDURE [NEW]; (* require binding to NEW procedure *)

PROCEDURE [DISPOSE]; (* require binding to DISPOSE procedure *)

PROCEDURE [?]; (* require accessor binding to [ ] operator *)

PROCEDURE [!]; (* require storage mutator binding to [ ] operator *)

PROCEDURE [~]; (* require removal mutator binding to [ ] operator *)

PROCEDURE [COUNT]; (* require binding to COUNT function *)

PROCEDURE [FOR]; (* require binding to FOR .. IN iterator *)

PROCEDURE [=]; (* require binding to equal operator *)

END CollectionType.