BINDINGS FOR VTYPE; (* V-Type *)

(* Semantic Properties for Vector Types *)


(* ADTs must be transparent records,
   structured literals will be used by default *)

TYPE = RECORD;


(* Bindings required for V-Type ADTs *)

PROCEDURE [:=]; (* require binding to assignment operator *)

PROCEDURE [::]; (* optional bindings to conversion operator *)

PROCEDURE [ABS]; (* require binding to ABS function *)

PROCEDURE [NEG]; (* require binding to NEG function *)

PROCEDURE [+]; (* require binding to plus operator *)

PROCEDURE [-]; (* require binding to minus operator *)

PROCEDURE [=]; (* require binding to equal operator *)

END VTYPE.