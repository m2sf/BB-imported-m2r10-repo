BINDINGS FOR ArrayType;

(* Semantic Properties for Static Array Types *)


(* ADTs must be opaque records,
   no literals may be used *)

TYPE = OPAQUE RECORD;


(* Bindings required for ArrayType ADTs *)

PROCEDURE [?]; (* require accessor binding to [ ] operator *)

PROCEDURE [!]; (* require mutator binding to [ ] operator *)

PROCEDURE [COUNT]; (* require binding to COUNT function *)

PROCEDURE [FOR]; (* require binding to FOR .. IN iterator *)

PROCEDURE [=]; (* require binding to equal operator *)

END ArrayType.